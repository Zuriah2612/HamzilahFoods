<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HamzilahFoods</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HamzilahFoods.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>               
        <ul>
         <li><a asp-page="/Index">Home</a></li>
         <li><a asp-page="/Menu">Menu</a> </li>
                <li><a asp-page="/ContactUs">Contact Us</a> </li>
                <form class="logout" style="float:right" asp-page="/Account/Logout" method="post">
                    <button type="submit">Logout</button>
                </form>
                  <form class="login" style="float:right" asp-page="/Account/Login" method="post">
                    <button type="submit">Log in</button>
                </form>
                <form class="Register" style="float:right" asp-page="/Account/Register" method="post">
                    <button type="submit">Register</button>
                </form>
            </ul>                          
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   
   
    <footer class="border-top footer text-muted ">
        <a class="link-footer" href="http://validator.w3.org/check?uri=referer">Validate HTML</a>
        <a class="link-footer" href="http://jigsaw.w3.org/css-validator/check/referer">Validate CSS</a>
        @if (User.IsInRole("Admin"))
                    {
                    <a class="link-footer admin" asp-page="/Admin/Index">Admin</a>
                    }
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>